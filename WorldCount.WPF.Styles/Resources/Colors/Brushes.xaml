<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="BlackBrush" Color="#1d1d1d"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="#ffffff"/>

    <SolidColorBrush x:Key="RedBrush" Color="Firebrick"/>
    <SolidColorBrush x:Key="GreenBrush" Color="SeaGreen"/>
    <SolidColorBrush x:Key="BlueBrush" Color="SteelBlue"/>
    <SolidColorBrush x:Key="GrayBrush" Color="DimGray"/>
    
</ResourceDictionary>